@model ViewModels.CallBackViewModel

@{
		ViewBag.Title = "نتیجه پرداخت";
}

<div class="tg-banner tg-haslayout parallax-window" data-parallax="scroll" data-bleed="100" data-speed="0.2" data-image-src="/images/header.jpg">
	<div class="tg-displaytable">
		<div class="tg-displaytablecell">
			<div class="container">
				<h3>سبد خرید</h3>
				<ol class="tg-breadcrumb">
					<li><a href="#">خانه</a></li>

					<li>سبد خرید</li>
				</ol>
			</div>
		</div>
	</div>
</div>


<main class="main-content tg-haslayout">
<div id="tg-two-columns" class="tg-two-columns tg-haslayout">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 main-content">
				<div class="checkout">
					<div class="row">
						<div class="col-sm-3">
						</div>
						<div class="col-sm-6">
							<div class="block-form order-review">
								<h3 class="form-heading">نتیجه پرداخت شما</h3>
								@if (Model.IsSuccess)
								{
									<p class="heading-color mb--30 text-center alert alert-success">
										پرداخت سفارش شما با موفقیت انجام شد
									</p>
									<table class="table table-hover" style="direction: rtl;">
										<tbody>
										@if (Model.ProductType == "form")
										{
											<tr>
												<td>دانلود: </td>
												<td><a class="btn btn-success" href="@Model.DownloadLink">دانلود فایل</a> </td>
											</tr>
										}
										<tr>
											<td>شماره فاکتور: </td>
											<td>@Model.OrderCode </td>
										</tr>
										<tr>
											<td>شماره پیگیری: </td>
											<td>@Model.RefrenceId </td>
										</tr>
										</tbody>
									</table>

								}
								else
								{
									<p class="heading-color mb--30 text-center alert alert-danger">
										خطا در انجام عملیات پرداخت
									</p>
									<table class="table table-hover">
										<tbody>
										<tr>
											<td>کد خطا: </td>
											<td>@Model.RefrenceId </td>
										</tr>


										</tbody>
									</table>
									<p>
										کاربر گرامی در صورتی که مبلغ سفارش از حساب شما کسر شده است، حداکثر ظرف مدت 72 ساعت به حساب شما باز خواهد گشت. در صورت مشکل با شماره تلفن پشتیبانی تماس بگیرید.
									</p>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

</main>